@import 'colors'

*
  padding: 0
  margin: 0
  box-sizing: border-box
  color: inherit
  border: none
  outline: none
  outline-offset: 0
  resize: none

:root
  font: 14pt 'Roboto', sans-serif
  color: $text-color
  -webkit-font-smoothing: antialiased

h1, h2, h3, h4, h5, h6
  font-weight: 300
  opacity: 0.9
  margin: 1rem 0

ul, ol
  list-style: none

a
  text-decoration: none

p
  margin-top: 0.8em
  margin-bottom: 0.8em

em .fa
  margin-left: 0.2em
  margin-right: 0.1em


[contenteditable]:empty::after
  content: attr(placeholder)
  opacity: 0.5
  font-style: italic
  cursor: text

::-webkit-scrollbar
  width: 8px
  height: @width

::-webkit-scrollbar-track, ::-webkit-scrollbar-corner
  background-color: darken($theme-color-dark, 20%)

::-webkit-scrollbar-thumb
  background-color: $theme-color-light

::-webkit-scrollbar-button
  display: none

::selection
  background: rgba(black, 0.3)
