{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*",
    "./src/**/*.vue",
    "./types/**/*.d.ts"
  ]
}
