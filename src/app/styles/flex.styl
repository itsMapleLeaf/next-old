
.flex, .flex-row
  display: flex

.flex-column
  @extend .flex
  flex-direction: column

.flex-inline
  display: inline-flex

.flex-grow
  flex-grow: 1

.flex-fixed
  flex-shrink: 0

.flex-justify-center
  justify-content: center

.flex-justify-space-between
  justify-content: space-between

.flex-justify-end
  justify-content: flex-end

.flex-align-center
  align-items: center

.flex-align-stretch
  align-items: stretch

.flex-wrap
  flex-wrap: wrap

.flex-center
  @extend .flex, .flex-justify-center, .flex-align-center
