$font-size = 14pt
$font-family = 'Roboto', sans-serif
$text-color = hsl(205, 30%, 90%)

.text-normal
  font-family: $font-family
  font-weight: 400
  color: $text-color

.text-light
  @extend .text-normal
  font-weight: 300

.text-underline
  @extend .text-normal
  text-decoration: none
  border-bottom: 1px solid rgba($text-color, 0.5)
