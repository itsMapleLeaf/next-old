@import 'variables'

transition(state = hover, time = 0.2s)
  transition: time ease all
  &:{state}
    {block}

border-highlight(lightness = 0%, color = fg-color)
  border-bottom: 3px solid lighten(color, (20% + lightness))

hover-darken()
  +transition(hover)
    cursor: pointer
    background: darken(bg-color, 20%)

hover-lighten()
  +transition(hover)
    cursor: pointer
    background: lighten(fg-color, 20%)

shadow()
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.5)

side-panel()
  width: 12em
  height: 100vh

green-highlight()
  color: lighten(green, 10%) rgba(green, 0.2)

soft-underline()
  text-decoration: none
  border-bottom: 1px solid rgba(text-color, 0.3)
