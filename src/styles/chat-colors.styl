.chat-color
  text-shadow: 0px 1px 2px rgba(black, 0.5)

  &.white  { color: rgb(255, 255, 255) }
  &.black  { color: rgb(20, 20, 20) }
  &.red    { color: rgb(255, 63, 43) }
  &.blue   { color: rgb(52, 152, 219) }
  &.yellow { color: rgb(238, 247, 125) }
  &.green  { color: rgb(46, 204, 113) }
  &.pink   { color: rgb(255, 192, 203) }
  &.gray   { color: rgb(149, 165, 166) }
  &.orange { color: rgb(230, 126, 34) }
  &.purple { color: rgb(206, 139, 233) }
  &.brown  { color: rgb(204, 136, 107) }
  &.cyan   { color: rgb(77, 200, 255) }
