
.flex
  display: flex

.flex-column
  @extend .flex
  flex-direction: column

.flex-grow
  flex-grow: 1

.flex-fixed
  flex-shrink: 0

.flex-justify-center
  justify-content: center

.flex-justify-space-between
  justify-content: space-between

.flex-align-center
  align-items: center

.flex-center
  @extend .flex, .flex-justify-center, .flex-align-center
