
.ui-shadow
  box-shadow: 0px 2px 8px rgba(black, 0.3)

.ui-shadow-symmetric
  box-shadow: 0 0 12px rgba(black, 0.8)

.ui-rounded
  border-radius: 0.2rem

.ui-transition
  transition: 0.17s

.ui-pointer
  cursor: pointer

.ui-faded
  opacity: 0.5

.ui-small
  font-size: 80%

.ui-border
  border-bottom: 2px solid $colors.light

.ui-ellipsis
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

.ui-pre-wrap
  white-space: pre-wrap

.ui-shade
  background-color: rgba(black, 0.7)

.ui-label
  margin-left: 0.25em

for $state in (hover focus)
  .ui-{$state}-border
    @extend .ui-transition
    &:{$state}
      border-color: lighten($colors.light, 40%)

  .ui-{$state}-darken
    @extend .ui-transition
    &:{$state}
      @extend .color-darker

.ui-link
  @extend .ui-hover-border
  border-bottom: 2px solid rgba($colors.text, 0.3)
  color: lighten($colors.light, 70%)

.ui-overlay
  @extend .ui-fullscreen, .flex-center, .ui-shade
  overflow: hidden

.ui-panel
  @extend .color-main, .ui-shadow, .ui-fit-viewport
  width: min-content
  position: relative

for $side in (left right)
  .ui-panel-{$side}
    @extend .color-main, .ui-shadow, .ui-anchor-{$side}

.ui-field
  margin-bottom: 1rem
  &:first-child
    margin-top: 1rem

.ui-input
  @extend .color-dark, .flex, .ui-transition

  input, textarea
    @extend .ui-padding-2, .ui-border, .ui-focus-border
    font-size: 90%
    width: 100%

    &:focus
      @extend .color-darker

for $side in (left right)
  .ui-input-icon-{$side}
    @extend .ui-input
    position: relative

    input, textarea
      padding-{$side}: 2.2rem

    .ui-icon
      @extend .ui-padding-2
      position: absolute
      {$side}: 0
      opacity: 0.5
      pointer-events: none

.ui-button
  @extend .color-dark
  @extend .ui-padding-2
  @extend .ui-pointer, .ui-transition
  @extend .ui-hover-darken, .ui-focus-darken
  font-size: 90%
  min-width: 4em
